public class Letter {
  private char value;
  private boolean isGuessed;
  
  public Letter(char _value) {
    this.value = _value;
    this.isGuessed = false;
  }
  
  public char getLetter() {
    return this.value;
  }
  
  // REMOVE: should this be a different method name, or a different attribute name? Check myCourses
  public boolean getRevealed() {
    return this.isGuessed;
  }
  
  public void reveal() {
    this.isGuessed = true;
  }
}